<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ericaschulz.swissotelchicago.MainActivity"
    android:background="@color/colorBg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swiss_lobby"
        android:src="@drawable/swissotel_lobby"
        android:layout_above="@+id/swiss_logo"
        android:layout_alignParentEnd="true" />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swiss_logo"
        android:src="@drawable/swissotel_logo"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_button"
        android:id="@+id/book_button"
        android:background="@drawable/button_border"
        android:textColor="#ffffff"
        android:layout_below="@+id/swiss_logo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_button"
        android:id="@+id/profile_button"
        android:background="@drawable/button_border"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/book_button"
        android:layout_alignEnd="@+id/swiss_logo"
        android:layout_marginEnd="46dp" />



</RelativeLayout>
